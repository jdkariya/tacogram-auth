<div class="row">
  <% if @current_user%>
  <% for post in @posts %>
    <div class="col-3">
      <h4>
        <!-- TODO: display the name of the user that created the post -->
        <%user = User.find_by({"id" => post["user_id"]})%>
        <% if user %>
          <%= user["first_name"]%>
        <% else%>
          anonymous
        <% end%>
      </h4>
      <img class="img-fluid" src="<%= post["image"] %>" class="w-full">
      <p><%= post["body"] %></p>
    </div>
  <% end %>
  <% else %>
        <%flash["notice"] = "Not today, dick!"%>
       <p> Please <a href="/login">login</a> to post. </p>
        
  <% end %>

</div>